<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="iRentMe.Views.LoginPage"
             Shell.NavBarIsVisible="False">
    <StackLayout>
        <Frame HeightRequest="800" BackgroundColor="{StaticResource Primary}" Margin="-90,-350,-200,0"
               CornerRadius="220">
            <StackLayout  HeightRequest="450" WidthRequest="100" HorizontalOptions="FillAndExpand" VerticalOptions="End"
                         Margin="90,0,190,50">
                <!--Log-in-->
                <StackLayout Margin="20,100" IsVisible="False">
                    <Label Text="Login" FontSize="25" FontFamily="FontLight" TextColor="{StaticResource TextColorWhite}"/>
                    <BoxView HeightRequest="2" WidthRequest="40" BackgroundColor="{StaticResource TextColorWhite}" HorizontalOptions="StartAndExpand"
                             Margin="0,15"/>
                    <StackLayout HeightRequest="200" Margin="0,20">
                        <Label Text="Email" FontFamily="FontLight"  TextColor="{StaticResource TextColorWhite}"/>
                        <Entry TextColor="{StaticResource TextColorWhite}" FontFamily="FontLight" Keyboard="Email"/>
                        <Label Text="Password" TextColor="{StaticResource TextColorWhite}" FontFamily="FontLight"/>
                        <Entry TextColor="{StaticResource TextColorWhite}" FontFamily="FontLight" IsPassword="True"/>
                        <Button HeightRequest="50" HorizontalOptions="End" WidthRequest="150" Text="Submit" VerticalOptions="Center"
                                BackgroundColor="{StaticResource ButtonColor}" CornerRadius="15"/>
                    </StackLayout>
                </StackLayout>
                <!--Signup-->
                <StackLayout BackgroundColor="Gray" Margin="20,100" HeightRequest="450" IsVisible="True">
                    <ScrollView>
                        <StackLayout>
                            <Label Text="Sign up" FontSize="25" FontFamily="FontLight" TextColor="{StaticResource TextColorWhite}"/>
                            <BoxView HeightRequest="2" WidthRequest="40" BackgroundColor="{StaticResource TextColorWhite}" HorizontalOptions="StartAndExpand"
                                     Margin="0,15"/>
                            <StackLayout HeightRequest="200" Margin="0,20">
                                <Label Text="Email" FontFamily="FontLight"  TextColor="{StaticResource TextColorWhite}"/>
                                <Entry TextColor="{StaticResource TextColorWhite}" FontFamily="FontLight" Keyboard="Email"/>
                                <Label Text="Password" TextColor="{StaticResource TextColorWhite}" FontFamily="FontLight"/>
                                <Entry TextColor="{StaticResource TextColorWhite}" FontFamily="FontLight" IsPassword="True"/>
                                <Button HeightRequest="50" HorizontalOptions="End" WidthRequest="150" Text="Submit" VerticalOptions="Center"
                                        BackgroundColor="{StaticResource ButtonColor}" CornerRadius="15"/>
                            </StackLayout>
                        </StackLayout>
                    </ScrollView>
                </StackLayout>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>